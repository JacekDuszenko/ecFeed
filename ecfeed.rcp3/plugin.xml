<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.testify.ecfeed.rcp3.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="com.testify.ecfeed.rcp3.Perspective"
            id="ecfeed.rcp3.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="com.testify.ecfeed.rcp3.InitialView"
            id="ecfeed.rcp3.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="ecfeed.rcp3.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="ecfeed.rcp3.new"
                  label="New">
            </command>
            <command
                  commandId="ecfeed.rcp3.open"
                  label="Open">
            </command>
            <command
                  commandId="ecfeed.rcp3.save"
                  label="Save"
                  style="push">
            </command>
            <command
                  commandId="ecfeed.rcp3.saveAs"
                  label="SaveAs"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
         <menu
               label="Edit">
            <command
                  commandId="ecfeed.rcp3.undo"
                  label="Undo">
            </command>
            <command
                  commandId="ecfeed.rcp3.redo"
                  label="Redo"
                  style="push">
            </command>
         </menu>
         <menu
               label="Help">
            <command
                  commandId="ecfeed.rcp3.about"
                  label="About"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="ecfeed.rcp3.open"
            name="Open">
      </command>
      <command
            id="ecfeed.rcp3.save"
            name="Save">
      </command>
      <command
            id="ecfeed.rcp3.saveAs"
            name="SaveAs">
      </command>
      <command
            id="ecfeed.rcp3.new"
            name="New">
      </command>
      <command
            id="ecfeed.rcp3.about"
            name="About">
      </command>
      <command
            id="ecfeed.rcp3.undo"
            name="Undo">
      </command>
      <command
            id="ecfeed.rcp3.redo"
            name="Redo">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.testify.ecfeed.rcp3.handlers.OpenEctHandler"
            commandId="ecfeed.rcp3.open">
      </handler>
      <handler
            class="com.testify.ecfeed.rcp3.handlers.SaveEctHandler"
            commandId="ecfeed.rcp3.save">
      </handler>
      <handler
            class="com.testify.ecfeed.rcp3.handlers.SaveAsEctHandler"
            commandId="ecfeed.rcp3.saveAs">
      </handler>
      <handler
            class="com.testify.ecfeed.rcp3.handlers.NewEctHandler"
            commandId="ecfeed.rcp3.new">
      </handler>
      <handler
            class="com.testify.ecfeed.rcp3.handlers.AboutHandler"
            commandId="ecfeed.rcp3.about">
      </handler>
      <handler
            class="com.testify.ecfeed.rcp3.handlers.UndoHandler"
            commandId="ecfeed.rcp3.undo">
      </handler>
      <handler
            class="com.testify.ecfeed.rcp3.handlers.RedoHandler"
            commandId="ecfeed.rcp3.redo">
      </handler>
   </extension>

</plugin>
